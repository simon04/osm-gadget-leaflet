{
  "root": true,
  "env": {
    "browser": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "prefer-arrow-callback": "warn",
    "prefer-template": "warn",
    "prefer-const": "warn",
    "prefer-destructuring": "warn"
  }
}
